doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title WED Zusammenfassung
        link(href='./style/prism.css' rel='stylesheet')
        link(href='./style/prism-line-numbers.css' rel='stylesheet')
        link(href='./style/style.css' rel='stylesheet')
        script(src='./script/layoutSwitch.js')
        script(src='./script/dynamicNavCreator.js')
    body(data-layout='print')
        div.wrapper
            div.noDisplay.headerMenuWrapper
                div.headerMenuContent
                    p.switchText
                        | Print
                        label.switch
                            input#layoutSwitch(type='checkbox')
                            span.slider.round
                        | View
                    div.navMenuWrapperMobile
                        div#burgerMenu.container
                            div.bar1
                            div.bar2
                            div.bar3
            div.view
                div.noDisplay.navMenuWrapper
                    ul#navMenuPlaceholder
                    include ./stylesettings.pug
                div.pageWrapper
                    .page
                        include ./sections/css-grid-section.pug
                        include ./sections/css-flexbox-section.pug
                        include ./sections/user-centered-design-section.pug
                        include ./sections/css-animation-section.pug
                        include ./sections/testing-section.pug
                        include ./sections/sass-section.pug
                        include ./sections/node-packages-section.pug
                    .page
                        include ./sections/node-section.pug
                        include ./sections/cookies-section.pug
                        include ./sections/handlebars-section.pug
                        include ./sections/typescript-section.pug
                        include ./sections/security-section.pug
                        include ./sections/accessibility-section.pug
                        include ./sections/internationalization-section.pug
            div.noDisplay.footerWrapper
                        div.footerContent
                            p WED2 Spick © Moritz Michael Schiesser | David Petra Kühnhanss | Benny Joe Villiger

        script(src='./script/htmlEscapingInCodeElement.js')
        script(src='./script/titleColorAssigner.js')
        script(src='./script/prism.js')
        script(src='./script/prism-line-numbers.js')
