{{#if author}}
    &lt;h1&gt;{{firstName}}{{lastName}}&lt;/h1&gt;
{{/if}}
{{#unless license}}
    &lt;h3&gt; class="warning">WARNING no license&lt;/h3&gt;
{{/unless}}
{{#each people}}
    &lt;li&gt;{{this}}&lt;/li&gt;
{{/each}}
{{#each array}}
    {{@root.foo}}
    {{#if @first}}First!{{/if}}
    {{@index}}
    {{@key}}
    {{#if @last}}Last!{{/if}}
{{/each}}
